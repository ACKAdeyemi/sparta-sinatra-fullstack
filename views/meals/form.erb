<form action="/meals/<%= @meal.id %>" method="POST">
  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title" value="<%= @meal.title %>">
  </div>

  <div>
    <label>Description</label>
    <textarea name="description"><%= @meal.description %></textarea>
  </div>

  <div>
    <input type="submit" value="Save Meal">
  </div>
  <% if(@meal.id) %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
